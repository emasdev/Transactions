<%= form_with model: @investment do |f| %>
  <nav class="navbar navbar-primary py-3">
    <div class="icon">
      <%=link_to investments_path do %>
        <i class="fa fa-arrow-left"></i>
      <%end%>
    </div>
    <div class="title">Create investment</div>
    <div class="submit">
      <%= f.button :submit do %>
        <i class="fa fa-arrow-right"></i>
      <% end %>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :amount %>
      <%= f.number_field :amount, class: "form-control" %>
    </div>
    <label>Group select (Optional)</label>
    <%= f.collection_check_boxes(:groups, @groups, :id, :name) do |item| %>
      <div class="form-check">
        <%= item.label %>
        <%= item.check_box %>
      </div>
    <% end %>
    <%# <%= f.collection_select :groups, @groups, :id, :name, {include_blank: "-- None --"},  {multiple: true, class: "form-control"} %>
    <%=render "shared/errors" ,object:@investment%>
  </div>
<%end%>
